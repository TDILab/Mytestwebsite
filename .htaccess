# Apache .htaccess for URL rewriting and cache control
# Place this in the site root when deploying to an Apache server on GoDaddy or similar hosts.

# Enable URL rewriting for clean URLs (remove .html extension)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Explicit rewrites for known files BEFORE the generic rule
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^about/?$ about.html [NC,L]
  RewriteRule ^services/?$ services.html [NC,L]
  RewriteRule ^contact/?$ contact.html [NC,L]
  RewriteRule ^[Qq]&[Aa]/?$ qa.html [NC,L]
  RewriteRule ^[Qq][Aa]/?$ qa.html [NC,L]
  RewriteRule ^CCTV-Service/?$ cctv-service.html [NC,L]
  RewriteRule ^cctv-service/?$ cctv-service.html [NC,L]
  RewriteRule ^Laptop-Service/?$ laptop-service.html [NC,L]
  RewriteRule ^laptop-service/?$ laptop-service.html [NC,L]
  RewriteRule ^Contact-Details/?$ contact-details.html [NC,L]
  RewriteRule ^contact-details/?$ contact-details.html [NC,L]

  # Generic rule: remove .html extension from URLs
  # This allows /qa to work instead of /qa.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^([a-zA-Z0-9_\-]+)/?$ $1.html [NC,L]

  # Prevent direct access to .htaccess file
  <FilesMatch "^\.htaccess$">
    Order allow,deny
    Deny from all
  </FilesMatch>
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On
  # HTML - no cache
  ExpiresByType text/html "access"
  # Long-lived assets
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
  # Ensure HTML is revalidated (use no-cache so browsers check with the server)
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, must-revalidate, max-age=0"
  </FilesMatch>

  # Cache static assets aggressively (assumes fingerprinting in build)
  <FilesMatch "\.(css|js|png|jpg|jpeg|webp|svg|gif|woff2|woff)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>

# Fallback if neither module is available: try to set simple header via Redirect
# (best-effort; remove if your host doesn't allow Header/Expires directives)
