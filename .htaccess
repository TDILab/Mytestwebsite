# Apache .htaccess to set Cache-Control headers for static assets
# Place this in the site root when deploying to an Apache server.

<IfModule mod_expires.c>
  ExpiresActive On
  # HTML - no cache
  ExpiresByType text/html "access"
  # Long-lived assets
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
  # Ensure HTML is revalidated (use no-cache so browsers check with the server)
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, must-revalidate, max-age=0"
  </FilesMatch>

  # Cache static assets aggressively (assumes fingerprinting in build)
  <FilesMatch "\.(css|js|png|jpg|jpeg|webp|svg|gif|woff2|woff)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>

# Fallback if neither module is available: try to set simple header via Redirect
# (best-effort; remove if your host doesn't allow Header/Expires directives)
